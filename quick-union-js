// Implementation of quick union find

function id(n) {
  var arr = [];
  for (i = 0; i < n; i++) arr[i] = i;
  return arr;
}

var id = id(100);

function connected(p, q) {
  return id[p] === id[q];
}

function union(p, q) {
  var pid = id[p];
  var qid = id[q];

  for (i = 0; i < id.length; i++)
    if (id[i] == pid)
      id[i] = qid;
}

union(5, 1);
union(7, 0);
union(2, 0);
union(7, 6);
union(1, 0);
union(5, 100);

alert(connected(2, 100));

